{
  "manifest_version": 3,
  "name": "Gmail Verification Helper",
  "version": "1.0",
  "permissions": [
    "alarms",
      "scripting",
        "activeTab",
    "identity", 
  "storage", 
  "tabs",  
  "notifications"
],
  "oauth2": {
    "client_id": "623279711257-4fi3g03edbuboqpre6307esu544onk7e.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/gmail.readonly"]
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Gmail Helper"
  },
  "icons": {
    "16": "icon16.png"
  },
  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }
]
}
